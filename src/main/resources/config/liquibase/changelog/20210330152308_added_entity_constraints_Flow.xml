    <!--
        Added the constraints for entity Flow.
    -->
    <changeSet id="20210330152308-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="flow"
                                 constraintName="fk_flow__user_id"
